<h1>Cities</h1>

<!-- black border -->
<table style="border: 2px ridge black;">
    <tr>
        <th style="border: 2px ridge black;">City Code</th>
        <th style="border: 2px ridge black;">Country Code</th>
        <th style="border: 2px ridge black;">City Name</th>
        <th style="border: 2px ridge black;">Population</th>
        <th style="border: 2px ridge black;">By the Sea</th>
        <th style="border: 2px ridge black;">Area</th>
        <th></th>
    </tr>
    <!-- save data and has a cityDetails page to show more infomative facts about the city -->
    <% cities.forEach((city)=> { %>
        <tr>
            <td style="border: 2px ridge black;">
                <%= city.cty_code %>
            </td>
            <td style="border: 2px ridge black;">
                <%= city.co_code %>
            </td>
            <td style="border: 2px ridge black;">
                <%= city.cty_name %>
            </td>
            <td style="border: 2px ridge black;">
                <%= city.population %>
            </td>
            <td style="border: 2px ridge black;">
                <%= city.isCoastal %>
            </td>
            <td style="border: 2px ridge black;">
                <%= city.areaKM %>
            </td>
            <td style="border: 2px ridge black;"><a href="/cityDetails/<%= city.cty_code %>">All Details</a></td>
        </tr>
        <% }) %>
</table>

